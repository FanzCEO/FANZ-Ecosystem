# FANZ Development Environment Configuration
# This file configures all FANZ ecosystem services

# Core Service Configuration
NODE_ENV=development
FANZ_ECOSYSTEM_MODE=development
FANZ_LOG_LEVEL=debug

# Port Assignments for FANZ Services
FANZDASH_PORT=5174
FANZSSO_PORT=5175
FANZMONEYDASH_PORT=5176
PUPFANZ_PORT=5178
BOYFANZ_PORT=5178
GIRLFANZ_PORT=5179
TABOO_FANZ_PORT=5180
RECOVERY_FANZ_PORT=5181

# Default Port (for this service)
PORT=5174

# Database Configuration
DATABASE_URL=postgresql://fanz_dev:dev_password@localhost:5432/fanz_development
REDIS_URL=redis://localhost:6379/0

# Authentication & Security
JWT_SECRET=dev_jwt_secret_change_in_production
SESSION_SECRET=dev_session_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_32_chars_long!

# External Service URLs
FANZSSO_URL=http://localhost:5175
FANZDASH_URL=http://localhost:5174
FANZMONEYDASH_URL=http://localhost:5176
API_GATEWAY_URL=http://localhost:5174

# Payment Gateways (Development)
STRIPE_PUBLISHABLE_KEY=pk_test_dev_key_here
STRIPE_SECRET_KEY=sk_test_dev_key_here
CCBILL_CLIENT_ACCOUNT=test_ccbill_account
SEGPAY_PACKAGE_ID=test_segpay_package

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_ORG_ID=your_openai_org_id
CONTENT_MODERATION_ENDPOINT=http://localhost:5174/api/moderation

# Media & Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=jpg,jpeg,png,gif,webp,mp4,webm,mov

# WebRTC & Streaming
WEBRTC_SIGNALING_URL=ws://localhost:5174/signaling
STREAM_SERVER_URL=http://localhost:5174/stream
TURN_SERVER_URL=turn:localhost:3478
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Monitoring & Analytics
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_RETENTION_DAYS=30

# Development Features
ENABLE_CORS=true
ENABLE_DEBUG_ROUTES=true
ENABLE_API_DOCS=true
ENABLE_HOT_RELOAD=true
DISABLE_RATE_LIMITING=true

# Legal & Compliance
ENABLE_2257_COMPLIANCE=true
REQUIRE_AGE_VERIFICATION=true
ENABLE_GDPR_MODE=true
ENABLE_CCPA_MODE=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VR_STREAMING=true
ENABLE_BLOCKCHAIN_FEATURES=true
ENABLE_QUANTUM_FEATURES=false
ENABLE_NEURAL_MODERATION=true
ENABLE_CREATOR_COPILOT=true

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=587

# Development Debugging
DEBUG=fanz:*
VERBOSE_LOGGING=true
LOG_SQL_QUERIES=true
ENABLE_PERFORMANCE_MONITORING=true